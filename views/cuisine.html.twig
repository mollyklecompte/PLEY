<!DOCTYPE html>
<html>
<head>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title></title>
</head>
<body>
    <div class="container">
        <h1>{{ cuisine.getCuisineType }}</h1>
        <p><a href="/cuisines/{{ cuisine.getId }}/edit">(Edit This Cuisine)</a></p>

        <h2>Add a restaurant</h2>
        <form action="/restaurants" method="post">
            <div class="form-group">
                <input id="restaurant" name='cuisine_id' class="form-control" type="hidden" value="{{ cuisine.getId() }}">
                <label for="restaurants">Restaurant Name</label>
                <input id="restaurant" name="restaurant" type="text">
            </div>
            <div class="form-group">
                <label for="contact">Contact Info</label>
                <input id="contact" name="contact" type="text">
            </div>
            <button type="submit" class="btn btn-info">ADD!</button>
        </form>
        {% if restaurants is not empty %}
            {% for restaurant in restaurants %}
                <p><a href="/restaurants/{{ restaurant.getId }}">{{ restaurant.getRestaurantName }}</a></p>
            {% endfor %}
        {% endif %}
        <p><a href="/">Home</a></p>

    </div>
</body>
</html>
